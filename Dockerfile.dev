FROM node:14
ENV NPM_CONFIG_LOGLEVEL warn
ENV CHOKIDAR_USEPOLLING=true
ENV SKIP_PREFLIGHT_CHECK=true
ARG app_env
ENV APP_ENV $app_env

# create frontend app dir
RUN mkdir -p /frontend
WORKDIR /frontend

# install deps
COPY package.json ./
#COPY yarn.lock ./
RUN yarn install --frozen-lockfile
# COPY package*.json ./
# RUN npm ci

# Bundle app source
COPY ./public ./public

# Copy env file
COPY .env ./

CMD if [ ${APP_ENV} = production ]; \
    then \
    npm ci -g http-server && \
    npm run build && \
    cd build && \
    hs -p 3000; \
    else \
    npm run start; \
    fi

EXPOSE 3000
